---
import Container from "@components/Container.astro";
import PageLayout from "@layouts/PageLayout.astro";
import { INTERFACE } from "@consts";
---

<PageLayout title={INTERFACE.TITLE} description={INTERFACE.DESCRIPTION}>
  <Container>
    <div class="space-y-10">
      <div class="animate font-semibold text-black dark:text-white text-xl">
        Interface
      </div>
      <div class="animate">
        <p class="font-serif italic mb-8 opacity-75">
          A boundary where two domains meet. If you'd like to reach across, use the form below.
        </p>

        <div class="flex justify-center">
          <form
            action="https://formspree.io/f/mldbypra"
            method="POST"
            class="w-full max-w-2xl space-y-6"
          >
            <div>
              <label for="email" class="block text-sm font-semibold mb-1.5 text-black dark:text-white">
                Your email address
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-3 py-2 rounded-lg border border-black/15 dark:border-white/20 bg-transparent text-black dark:text-white placeholder:text-black/30 dark:placeholder:text-white/30 focus:outline-none focus:border-black/40 dark:focus:border-white/40 transition-colors duration-200"
                placeholder="you@example.com"
              />
            </div>

            <div>
              <label for="subject" class="block text-sm font-semibold mb-1.5 text-black dark:text-white">
                Subject
              </label>
              <input
                type="text"
                id="subject"
                name="subject"
                class="w-full px-3 py-2 rounded-lg border border-black/15 dark:border-white/20 bg-transparent text-black dark:text-white placeholder:text-black/30 dark:placeholder:text-white/30 focus:outline-none focus:border-black/40 dark:focus:border-white/40 transition-colors duration-200"
                placeholder="What's on your mind?"
              />
            </div>

            <div>
              <label for="message" class="block text-sm font-semibold mb-1.5 text-black dark:text-white">
                Your message
              </label>
              <textarea
                id="message"
                name="message"
                rows="6"
                required
                class="w-full px-3 py-2 rounded-lg border border-black/15 dark:border-white/20 bg-transparent text-black dark:text-white placeholder:text-black/30 dark:placeholder:text-white/30 focus:outline-none focus:border-black/40 dark:focus:border-white/40 transition-colors duration-200 resize-vertical"
                placeholder="Write your message here..."
              ></textarea>
            </div>

            <button
              type="submit"
              class="px-6 py-2 rounded-lg border border-black/15 dark:border-white/20 font-semibold text-black dark:text-white hover:bg-black/5 dark:hover:bg-white/5 transition-colors duration-200"
            >
              Send
            </button>
          </form>
        </div>
      </div>
    </div>
  </Container>
</PageLayout>
